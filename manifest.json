{
    "manifest_version": 3,
    "name": "Herramientas SAT (Copiar-Pegar)",
    "version": "1.0",
    "description": "Habilita copiar y pegar en el portal de facturaci√≥n del SAT.",
    "permissions": ["scripting"],
