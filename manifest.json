{
    "manifest_version": 3,
    "name": "Herramientas SAT (Copiar-Pegar)",
    "version": "1.0",
    "description": "Habilita copiar y pegar en el portal de facturaci√≥n y declaraciones del SAT.",
    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "storage",
        "nativeMessaging"
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "action": {
        "default_title": "Herramientas SAT (Copiar-Pegar)",
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://portal.facturaelectronica.sat.gob.mx/*"
            ],
            "css": [
                "content-scripts/nofrecuent.css"
            ],
            "all_frames": true,
            "run_at": "document_idle",
            "world": "ISOLATED",
            "type": "module"
        }
    ],
    "host_permissions": [
        "https://portal.facturaelectronica.sat.gob.mx/*",
        "https://*.clouda.sat.gob.mx/*",
        "https://wwwmat.sat.gob.mx/operacion/53027/genera-tu-constancia-de-situacion-fiscal.",
        "https://wwwmatnp.sat.gob.mx/operacion/53027/genera-tu-constancia-de-situacion-fiscal."
    ],
    "icons": {
        "48": "src/Logo 48px.png",
        "128": "src/Logo 128px.png"
    }
}