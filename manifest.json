{
    "manifest_version": 3,
    "name": "Herramientas SAT (Copiar-Pegar)",
    "version": "1.0",
    "description": "Habilita copiar y pegar en el portal de facturaci√≥n del SAT.",
    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "action": {
        "default_title": "Herramientas SAT (Copiar-Pegar)",
        "default_popup": "popup/popup.html"
    },
    "host_permissions": [
        "https://portal.facturaelectronica.sat.gob.mx/*"
    ],
    "icons": {
        "16": "src/Logo 128px.png",
        "32": "src/Logo 48px.png",
        "48": "src/Logo 32px.png",
        "128": "src/Logo 16px.png"
    }
}